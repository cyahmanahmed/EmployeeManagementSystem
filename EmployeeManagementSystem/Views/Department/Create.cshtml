@model EmployeeManagementSystem.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">New Department</h2>
            <p class="text-muted mb-0">Fill in the details to add a new department.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="DepartmentName" class="form-label fw-semibold">Department Name</label>
                    <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                    <span asp-validation-for="DepartmentName" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle me-1"></i> Create Department
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

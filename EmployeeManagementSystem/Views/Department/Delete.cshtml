@model EmployeeManagementSystem.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-danger">Delete Department</h2>
            <p class="text-muted mb-0">Please confirm that you want to delete this department.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Department ID</dt>
                <dd class="col-sm-9">@Model.DepartmentID</dd>

                <dt class="col-sm-3 text-muted">Department Name</dt>
                <dd class="col-sm-9">@Model.DepartmentName</dd>
            </dl>
        </div>
    </div>

    <form asp-action="SoftDelete" method="post" class="d-flex gap-2">
        <input type="hidden" name="id" value="@Model.DepartmentID" />
        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash me-1"></i> Soft Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </form>
</div>

